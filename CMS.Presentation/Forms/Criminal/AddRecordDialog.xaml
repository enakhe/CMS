<Window x:Class="CMS.Presentation.Forms.Criminal.AddRecordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMS.Presentation.Forms.Criminal"
        mc:Ignorable="d"
        Title="Add Criminal Record"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Width="826" Height="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="20">
            <TextBlock Text="Full Name:" FontWeight="Bold"/>
            <TextBox x:Name="txtFullName" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Date of Birth:" FontWeight="Bold" Margin="0,10,0,0"/>
                    <DatePicker x:Name="dpDOB" />
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Gender:" FontWeight="Bold" Margin="0,10,0,0"/>
                    <ComboBox x:Name="cbGender">
                        <ComboBoxItem Content="Male"/>
                        <ComboBoxItem Content="Female"/>
                    </ComboBox>
                </StackPanel>
            </Grid>

            <TextBlock Text="Address:" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBox x:Name="address" />

            <TextBlock Text="National ID:" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBox x:Name="txtNationalID" />

            <TextBlock Text="Offenses:" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBox x:Name="txtOffenses" Height="100" />

            <TextBlock Text="Notes:" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBox x:Name="notes" Height="100" />

            <TextBlock Text="Gender:" FontWeight="Bold" Margin="0,10,0,0"/>
            <ComboBox x:Name="status">
                <ComboBoxItem Content="Active"/>
                <ComboBoxItem Content="Released"/>
                <ComboBoxItem Content="Under Investigation"/>
            </ComboBox>

            <CheckBox x:Name="chkWatchlist" Content="Add to Watchlist?" Margin="0,10,0,0"/>

            <Button Content="Save Record"
                    Background="Green" Foreground="White" Margin="0,15,0,0"/>
        </StackPanel>

        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border BorderBrush="Black" BorderThickness="1" Padding="5">
                <Image x:Name="imgCriminalPhoto" Width="150" Height="150" Stretch="Fill"/>
            </Border>
            <Button Content="Upload Image" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
