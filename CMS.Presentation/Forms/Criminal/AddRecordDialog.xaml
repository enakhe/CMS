<Window x:Class="CMS.Presentation.Forms.Criminal.AddRecordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMS.Presentation.Forms.Criminal"
        mc:Ignorable="d"
        Title="Add Criminal Record"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Width="500" Height="710">
    <Grid>
        <StackPanel Grid.Column="0" Margin="20">
            <TextBlock Text="Full Name:" FontWeight="Bold"/>
            <TextBox x:Name="txtFullName" Padding="2,5,0,5" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Date of Birth:" FontWeight="Bold" Margin="0,10,0,0"/>
                    <DatePicker x:Name="dpDOB" Padding="5,5,0,5" />
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Gender:" FontWeight="Bold" Margin="0,10,0,0"/>
                    <ComboBox x:Name="cbGender" Padding="5,5,5,5">
                        <ComboBoxItem Content="Male"/>
                        <ComboBoxItem Content="Female"/>
                    </ComboBox>
                </StackPanel>
            </Grid>

            <TextBlock Text="Address:" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBox x:Name="txtAddress" Padding="5,5,0,5" />

            <TextBlock Text="National ID:" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBox x:Name="txtNationalID" Padding="5,5,0,5" />

            <TextBlock Text="Offenses:" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBox x:Name="txtOffenses" Height="100" Padding="5,5,0,5" TextWrapping="Wrap"
         AcceptsReturn="True"
         VerticalScrollBarVisibility="Auto"
         HorizontalScrollBarVisibility="Disabled" />

            <TextBlock Text="Notes:" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBox x:Name="txtNotes" Height="100" Padding="5,5,0,5" 
                     TextWrapping="Wrap"
         AcceptsReturn="True"
         VerticalScrollBarVisibility="Auto"
         HorizontalScrollBarVisibility="Disabled" />

            <TextBlock Text="Status:" FontWeight="Bold" Margin="0,10,0,0"/>
            <ComboBox x:Name="txtStatus" Padding="5,5,0,5">
                <ComboBoxItem Content="Active"/>
                <ComboBoxItem Content="Released"/>
                <ComboBoxItem Content="Under Investigation"/>
            </ComboBox>

            <CheckBox x:Name="chkWatchlist" Content="Add to Watchlist?" Margin="0,10,0,0"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <Button Content="Save Record"
Background="Green" Foreground="White" Margin="0,63,5,0" Padding="0,5,0,5" Cursor="Hand" Click="AddRecord_Click"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <Button Content="Cancel"
Background="Red" Foreground="White" Margin="5,63,0,0" Padding="0,5,0,5" Cursor="Hand" Click="AddRecord_Click"/>
                </StackPanel>
            </Grid>
        </StackPanel>
        <Grid x:Name="LoaderOverlay" Background="Black" Opacity="0.5" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="150" Height="20" />
                <TextBlock Text="Loading, please wait..." Foreground="White" FontWeight="Bold" Margin="10,5,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
