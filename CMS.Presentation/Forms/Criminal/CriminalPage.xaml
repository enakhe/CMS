<Page x:Class="CMS.Presentation.Forms.Criminal.CriminalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CMS.Presentation.Forms.Criminal"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CriminalPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Form for Adding/Updating Criminal Records -->
        <StackPanel Orientation="Vertical" Margin="10" Grid.Row="0">
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Right">
                <Button Content="Add Criminal" Width="100" Margin="5" Background="Green" Foreground="White" Name="AddButton" Click="AddButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </StackPanel>

        <!-- Table to View Criminal Records -->
        <DataGrid x:Name="dgCriminals" Grid.Row="1" AutoGenerateColumns="False" Loaded="dgCriminals_Loaded">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding CriminalID}" Width="100"/>
                <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="200"/>
                <DataGridTextColumn Header="Age" Binding="{Binding Age}" Width="50"/>
                <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" Width="60"/>
                <DataGridTextColumn Header="NIN" Binding="{Binding NationalID}" Width="100"/>
                <DataGridTextColumn Header="WatchList" Binding="{Binding WatchlistStatus}" Width="100"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="150"/>
                <DataGridTextColumn Header="Date Added" Binding="{Binding DateAdded}" Width="150"/>

                <!-- Dropdown Column with Icons -->
                <DataGridTemplateColumn Header="Actions" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox Width="120">
                                <ComboBoxItem>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Images/edit.png" Width="16" Height="16"/>
                                        <TextBlock Text=" Edit" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </ComboBoxItem>
                                <ComboBoxItem>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Images/bill.png" Width="16" Height="16"/>
                                        <TextBlock Text=" Bill" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </ComboBoxItem>
                                <ComboBoxItem>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Images/delete.png" Width="16" Height="16"/>
                                        <TextBlock Text=" Delete" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </ComboBoxItem>
                            </ComboBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>


        <Grid x:Name="LoaderGrid" Background="Gray" Opacity="0.5" Visibility="Collapsed">
            <ProgressBar IsIndeterminate="True" Width="200" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</Page>
