<Page x:Class="CMS.Presentation.Forms.Criminal.CriminalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CMS.Presentation.Forms.Criminal"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CriminalPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Form for Adding/Updating Criminal Records -->
        <StackPanel Orientation="Vertical" Margin="10" Grid.Row="0">
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Add" Width="100" Margin="5" Background="Green" Foreground="White" Name="AddButton" Click="AddButton_Click"/>
                <Button Content="Update" Width="100" Margin="5" Background="Blue" Foreground="White"/>
                <Button Content="Delete" Width="100" Margin="5" Background="Red" Foreground="White"/>
            </StackPanel>
        </StackPanel>

        <!-- Table to View Criminal Records -->
        <DataGrid x:Name="dgCriminals" Grid.Row="1" AutoGenerateColumns="False" Loaded="dgCriminals_Loaded">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Age" Binding="{Binding Age}" Width="100"/>
                <DataGridTextColumn Header="Crime Type" Binding="{Binding CrimeType}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
