<Window x:Class="CMS.Presentation.Forms.Criminal.AddPicturesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMS.Presentation.Forms.Criminal"
        mc:Ignorable="d"
        Title="Add Criminal Pictures"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Width="500" Height="740">
    <Grid>
        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Mug Shot:" FontWeight="Bold" Margin="0,10,0,0"/>
                <Border BorderBrush="Black" BorderThickness="1" Padding="5">
                    <Image x:Name="imgCriminalPhoto" Width="150" Height="150" Stretch="Fill"/>
                </Border>
                <Button Content="Upload MugShot Image" Margin="10" Cursor="Hand" Background="Blue" Foreground="White" Padding="0,5,0,5" Click="UploadMugShot_Click" />
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Upload Criminal Pictures (Max 4)" FontWeight="Bold" />

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border BorderBrush="Black" BorderThickness="1" Padding="5" Margin="5">
                        <Image x:Name="img1" Width="150" Height="150" Stretch="Fill"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Padding="5" Grid.Column="1" Margin="5">
                        <Image x:Name="img2" Width="150" Height="150" Stretch="Fill"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Padding="5" Grid.Row="1" Margin="5">
                        <Image x:Name="img3" Width="150" Height="150" Stretch="Fill"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Padding="5" Grid.Row="1" Grid.Column="1" Margin="5">
                        <Image x:Name="img4" Width="150" Height="150" Stretch="Fill"/>
                    </Border>
                </Grid>

                <Button Content="Upload Images" Margin="10" Cursor="Hand" Background="Blue" Foreground="White" Padding="0,5,0,5" Click="UploadAdditionalImages_Click"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <Button Content="Save Record"
Background="Green" Foreground="White" Margin="0,5,5,0" Padding="0,5,0,5" Cursor="Hand" Click="AddRecord_Click"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <Button Content="Cancel"
Background="Red" Foreground="White" Margin="5,5,0,0" Padding="0,5,0,5" Cursor="Hand" Click="CancleButton_Click"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </StackPanel>
        <Grid x:Name="LoaderOverlay" Background="Black" Opacity="0.5" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="150" Height="20" />
                <TextBlock Text="Loading, please wait..." Foreground="White" FontWeight="Bold" Margin="10,5,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
