<Page x:Class="CMS.Presentation.Forms.FaceDetector.FaceDetectorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CMS.Presentation.Forms.FaceDetector"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FacevDetectorvPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Border BorderBrush="Black" BorderThickness="1" Padding="5" Margin="5">
            <Image Name="CameraPreview" Stretch="Fill" />
        </Border>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Name="MatchResult" Text="Scanning..." FontSize="16" FontWeight="Bold" Margin="10"/>
            <TextBlock Name="Position" Text="" FontSize="16" FontWeight="Bold" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
